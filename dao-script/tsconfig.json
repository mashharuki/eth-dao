{
  "compilerOptions": {
    "target": "ES6",                                  
    "module": "ES6",                                
    "esModuleInterop": true,  
    "sourceMap": true,
    "outDir": "./dist",  
    "moduleResolution": "node",                         
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
